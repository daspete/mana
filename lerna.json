{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "conventionalCommits": true,
  "command": {
    "version": {
      "message": "chore(release): publish %v"
    }
  },
  "changelog": {
    "labels": {
      "feat": "New Feature",
      "fix": "Bug Fix",
      "docs": "Documentation",
      "style": "Code style update",
      "perf": "Performance",
      "refactor": "Code Refactoring"
    }
  }
}
